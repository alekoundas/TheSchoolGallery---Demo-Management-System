@model Web_DomainClasses.Entities.Avatar.Avatar

@{
    ViewBag.Title = "Details";
}


<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <br />
            <h2 class="text-center" style="color:#f3efe9;"> edit Student</h2>
            <hr />
            <br />
            <div class="row">

                <!-- Section - Avatar Result ------------------------------------------>
                <div class="col-md-6 mx-auto text-center">
                    <div class="wrap-Avatar">
                        <div class="avatar_main">
                            @Html.DisplayNameFor(model => model.Background.ImageUrl)

                            <div><img class="avatar_child" src="~/images/Avatar/@Html.DisplayFor(model => model.Background.ImageUrl)" /></div>
                            <div><img class="avatar_child" src="~/images/Avatar/@Html.DisplayFor(model => model.Body.ImageUrl)" /></div>
                            @*<div><img class="avatar_child" src="~/images/Avatar/@Html.DisplayFor(model => model.Clothes.ImageUrl)" /></div>*@
                            <div><img class="avatar_child" src="~/images/Avatar/@Html.DisplayFor(model => model.Hair.ImageUrl)" /></div>
                        </div>
                    </div>
                </div>


                <!-- Section - Avatar Selection --------------------------------------->
                <div class="col-md-6 mx-auto  text-center">
                    <div class="wrap-Avatar">
                        <div class="row mx-0">
                            <div class="col px-0">
                                <button class="login100-form-btn" id="BackgroundSelection">Back</button>
                            </div>
                            <div class="col px-0">
                                <button class="login100-form-btn" id="BodySelection">Body</button>
                            </div>
                            <div class="col px-0">
                                <button class="login100-form-btn" id="ClothSelection">Cloth</button>
                            </div>
                            <div class="col px-0">
                                <button class="login100-form-btn" id="HairSelection">Hair</button>
                            </div>
                        </div>
                        <br />

                        <!-- SubSection - Background Images ----------------------------->


                        <div id="Background_Items" class="row mx-0">
                            @foreach (var item in Model.Background.ImageUrl)
                            {
                                <div class="col-6 px-0 avatar_selection">
                                    <img src="~/images/Avatar/@Html.DisplayFor(modelItem => item)" />
                                </div>
                            }
                        </div>

                        <!-- SubSection - Body Images ----------------------------->
                        <div id="Body_Items" class="row mx-0">
                            @foreach (var item in Model.Body.ImageUrl)
                            {
                                <div class="col-6 px-0 avatar_selection">
                                    <img src="~/images/Avatar/@Html.DisplayFor(modelItem => item)" />
                                </div>
                            }
                        </div>

                        <!-- SubSection - Clothing Images ------------------------->
                        @*<div id="Cloth_Items" class="row mx-0">
                            @foreach (var item in Model.Background.ImageUrl)
                            {
                                <div class="col-6 px-0 avatar_selection">
                                    <img src="~/images/Avatar/@Html.DisplayFor(modelItem => item)" />
                                </div>
                            }
                        </div>*@

                        <!-- SubSection - Hair Styles Images ---------------------->
                        <div id="Hair_Items" class="row mx-0">
                            @foreach (var item in Model.Hair.ImageUrl)
                            {
                                <div class="col-6 px-0 avatar_selection">
                                    <img src="~/images/Avatar/@Html.DisplayFor(modelItem => item)" />
                                </div>
                            }
                        </div>

                        <!-- Section - Student Details ---------------------------------------->
                        @*@Html.ActionLink("Edit", "Edit", new { id = Model.AvatarId }) |
                        @Html.ActionLink("Back to List", "Index")*@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    @Scripts.Render("~/bundles/jqueryval")

    <script>
        // AVATAR BUTTONS
        $("#BackgroundSelection").click(function (e) {
            $("#Background_Items").show(88);
            $("#Body_Items").hide(8);
            $("#Cloth_Items").hide(8);
            $("#Hair_Items").hide(8);
        });

        $("#BodySelection").click(function (e) {
            $("#Background_Items").hide(8);
            $("#Body_Items").show(88);
            $("#Cloth_Items").hide(8);
            $("#Hair_Items").hide(8);
        });

        $("#ClothSelection").click(function (e) {
            $("#Background_Items").hide(8);
            $("#Body_Items").hide(8);
            $("#Cloth_Items").show(88);
            $("#Hair_Items").hide(8);
        });

        $("#HairSelection").click(function (e) {
            $("#Background_Items").hide(8);
            $("#Body_Items").hide(8);
            $("#Cloth_Items").hide(8);
            $("#Hair_Items").show(88);
        });
    </script>


}

