@model Web_DomainClasses.Entities.School.Classroom

@{
    ViewBag.Title = "Details";
}

<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <br />
            <br />
            <div class="row">

                <!-- Section - Class Details ---------------------------------------->
                <div class="col-md-12 mx-auto text-center">
                    <div class="paintingcontainer">
                        <div class="studentdesc">
                            <h3>@Html.DisplayFor(model => model.Name)</h3>
                            <hr style="border-bottom:2px dotted" />
                            <h4>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h4>
                        </div>
                    </div>
                </div>

                <!-- Section - Teacher/School --------------------------------------->
                <div class="col-md-12 mx-auto text-center">
                    <div Class="dottedFrame">
                        <h5>Class Teacher</h5>
                        @*LINK TO SCHOOL Teachers PAGE*@
                        <a style="color:#f3efe9; font-size:24px;" href="@Url.Action("Details", "Teacher", new { id = Model.ClassroomId })">
                            @Html.DisplayFor(model => model.Teacher.FirstName) @Html.DisplayFor(model => model.Teacher.LastName)
                        </a>
                        <hr />
                        @*LINK TO SCHOOL DETAIL PAGE*@
                        <a style="color:#f3efe9; font-size:24px;" href="@Url.Action("Details", "School", new { id = Model.ClassroomId })">
                            @Html.DisplayFor(model => model.School.Name)
                        </a>

                        <h4>@Html.DisplayFor(model => model.School.City)</h4>
                    </div>
                </div>


                <!-- Section - STUDENTS ---------------------------------------->
                <div class="container">
                    <div class="row">

                        @foreach (var item in Model.Students)
                        {
                            <div class="col-md-4 mx-auto">
                                <div style="width:300px; height:300px;" class="wrap-studentAvatar">
                                    @*AVATAR HERE ------------------------------------------------------>>*@
                                    @*<img style="min-height:200px;" src="~/images/Avatar/back_06.png" />*@
                                    <img style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Background.ImageUrl)" />
                                </div>
                            </div>



                            <div class="col-lg-8 col-sm-6 align-items-stretch">
                                <div class="dottedFrameDark2">
                                    <div class="wrap-School">
                                        <div class="paintingInfo text-center">
                                            @*LINK TO STUDENT MAIN PAGE*@
                                            <a href="@Url.Action("Details", "Student", new { id = item.StudentId })">
                                                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                            </a>
                                            <hr />
                                            <h5 class="text-center">
                                                <i class="fa fa-child" aria-hidden="true"></i> Age: @Html.DisplayFor(modelItem => item.Age)
                                            </h5>
                                            <br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Section - Links ---------------------------------------->
                <div class="col-md-12 mx-auto text-center">
                    <div class="paintingcontainer">
                        <hr />
                        <br />
                        <div>
                            <a style="color:#f3efe9" href="@Url.Action("Details", "School", new { id = Model.ClassroomId })"><img id="iconBtn" src="~/images/UIcons/schools_off.png" /> school </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


