@model Web_DomainClasses.Entities.School.Classroom

@{
    ViewBag.Title = "Details";
}

<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <div class="row">
                <!-- Section - Class Details ---------------------------------------->
                <div class="col-md-6 mx-auto text-center">
                    <div class="sideFrameD" style="height:130px; margin-bottom:25px;">
                        <div class="studentdesc">
                            <p style="font-size:20px;">@Html.DisplayFor(model => model.Name)</p>
                            <hr />
                            <p>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</p>
                        </div>
                    </div>
                </div>

                <!-- Section - Teacher --------------------------------------->
                <div class="col-md-3 mx-auto text-center">
                    <div Class="sideFrameD" style="height:130px; margin-bottom:25px;">
                        <p>Class Teacher</p>
                        <hr />
                        @*LINK TO SCHOOL Teachers PAGE*@
                        <a style="font-size:20px;" href="@Url.Action("Details", "Teacher", new { id = Model.TeacherFK })">
                            @Html.DisplayFor(model => model.Teacher.FirstName) @Html.DisplayFor(model => model.Teacher.LastName)
                        </a>
                    </div>
                </div>

                <!-- Section - School --------------------------------------->
                <div class="col-md-3 mx-auto text-center">
                    <div Class="sideFrameD" style="height:130px; margin-bottom:25px;">
                        <p>@Html.DisplayFor(model => model.School.City)</p>
                        <hr />
                        @*LINK TO SCHOOL DETAIL PAGE*@
                        <a style="font-size:20px;" href="@Url.Action("Details", "School", new { id = Model.SchoolFK })">
                            @Html.DisplayFor(model => model.School.Name)
                        </a>
                    </div>
                </div>

                @Html.HiddenFor(model => model.School.SchoolId)

                <div class="col-md-12 mx-auto text-center">
                    <div class="container-fluid">
                        <div class="row">
                            <!-- Section - STUDENTS ---------------------------------------->
                            @foreach (var item in Model.Students)
                            {
                                <div class="col">
                                    <a href="@Url.Action("Details", "Student", new { id = item.StudentId })">
                                        <div class="dottedFrameDark isThisLink">
                                            <div class="d-flex justify-content-center align-items-center">
                                                <!-- Section - Avatar ------------------------------------------>
                                                <div style="width:300px; height:300px;" class="wrap-studentAvatar Mama_Avatar">
                                                    @*AVATAR HERE ------------------------------------------------------>>*@
                                                    <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Background.ImageUrl)" />
                                                    <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Body.ImageUrl)" />
                                                    <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Clothing.ImageUrl)" />
                                                    <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Hair.ImageUrl)" />
                                                </div>
                                            </div>
                                            <div class="paintingInfo text-center">
                                                @*LINK TO STUDENT MAIN PAGE*@
                                                <a href="@Url.Action("Details", "Student", new { id = item.StudentId })">
                                                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                                </a>
                                                <hr />
                                                <h5 class="text-center">
                                                    <i class="fa fa-child" aria-hidden="true"></i> Age: @Html.DisplayFor(modelItem => item.Age)
                                                </h5>
                                                <br />
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Section - Links ---------------------------------------->
                <div style="height:180px;" class="container col-12 align-self-center">
                    <hr />
                    <br />
                    <div class="row">
                        <div class="btn_contain1 col">
                            <div class="btn_child_norm1">
                                <a title="Classroom" href="@Url.Action("Index", "Classroom" )"><img src="~/images/UIcons/students_off.png" /></a>
                            </div>
                            <div class="btn_child_live1">
                                <a title="Classroom" href="@Url.Action("Index", "Classroom" )"><img src="~/images/UIcons/students.png" /></a>
                            </div>
                        </div>
                        <div class="btn_contain2 col">
                            <div class="btn_child_norm2">
                                <a title="go to school" href="@Url.Action("Details", "School", new { id = Model.School.SchoolId })"><img src="~/images/UIcons/schools_off.png" /></a>
                            </div>
                            <div class="btn_child_live2">
                                <a title="go to school" href="@Url.Action("Details", "School", new { id = Model.School.SchoolId })"><img src="~/images/UIcons/schoolspng.png" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

