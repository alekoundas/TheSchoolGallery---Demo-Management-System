@model IEnumerable<Web_DomainClasses.Entities.School.Classroom>

@{
    ViewBag.Title = "Index";
}


<div class="col-md-12 pt-20 pb-20">
    <h1 style="color:#f3efe9;">Classes</h1>
</div>
<div class="feature-area pt-10 pb-10  relative">
    <div class="container">
        <div class="row">
            <h2 class="col-md-6">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                @Html.ActionLink("Create New", "Create")
            </h2>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <p>
                        Find by Name: @Html.TextBox("SearchString")
                        <input class="btn btn-large" type="submit" value="Search" />
                    </p>
                }
            </div>
        </div>
    </div>
</div>

<section class="feature-area pt-100 pb-100  relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row">

            <div class="col-12 align-items-stretch">
                @*PARALLAXING SCHOOL IMAGES*@
                <div class="oz-body-wrap2">
                    <div class="container-fluid">
                        <div class="cd-background-wrapper">
                            <figure class="cd-floating-background">
                                <img style="top:60px" class="stackImages p_child" src="~/images/parallax/School_Parallax_back_01.png">
                                <img style="top:40px" class="stackImages P_child" src="~/images/parallax/School_Parallax_mount_02.png">
                                <img style="top:20px" class="stackImages p_child" src="~/images/parallax/School_Parallax_mount_01.png">
                                <img style="top:80px" class="stackImages p_child" src="~/images/parallax/School_Parallax_school.png">
                            </figure>
                        </div>
                    </div>
                </div>
            </div>

            @foreach (var item in Model)
            {
                <div class="col-12 align-items-stretch">
                    <div class="paintingcontainer">
                        <div class="wrap-School">
                            <div class="painting text-center">
                                @*IMAGE*@
                                @*<img class="schoolBanner" src="~/images/schools/@Html.DisplayFor(modelItem => item.Image)" />*@

                            </div>
                            <br />
                            <div class="Schooldesc">
                                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                <hr />
                                <ul class="text-right">
                                    <li>Description: @Html.DisplayFor(modelItem => item.Description)</li>
                                </ul>
                            </div>
                        </div>
                        <div>
                            <a style="color:#f3efe9" href="@Url.Action("Edit", "Classroom", new { id = item.ClassroomId })"><img src="~/images/edit.png" /> edit </a>
                            <a style="color:#f3efe9" href="@Url.Action("Details", "Classroom", new { id = item.ClassroomId })"><img src="~/images/details.png" /> details </a>
                            <a style="color:#f3efe9" href="@Url.Action("Delete", "Classroom", new { id = item.ClassroomId })"><img src="~/images/delete.png" /> delete </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>









