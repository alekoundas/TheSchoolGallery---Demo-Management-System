@model IEnumerable<Web_DomainClasses.Entities.School.Classroom>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 pt-20 pb-20">
    <h2>
        Painting Classes
    </h2>
</div>
<hr />
<div class="feature-area pt-10 pb-10  relative">
    <div class="container">
        <div class="row">
            <h2 class="col-md-6">

                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                @Html.ActionLink("Create New", "Create")

                @*@if (User.IsInRole("admin"))
                {
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    @Html.ActionLink("Create New", "Create")
                }*@

            </h2>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <p>
                        Find by Name: @Html.TextBox("SearchString")
                        <input class="btn btn-large" type="submit" value="Search" />
                    </p>
                }
            </div>
        </div>
    </div>
</div>

<section class="feature-area pt-100 pb-100  relative">
    <div class="overlay overlay-bg3"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-12 col-sm-12 align-items-stretch">
                    <div class="paintingcontainer">
                        <div class="painting">
                            <img src="~/images/schools/@Html.DisplayFor(modelItem => item.Image)" />
                        </div>
                        <div class="paintingdesc">
                            <h2>@Html.DisplayFor(modelItem => item.Name) </h2>
                            <hr />
                            <ul class="text-right">
                                <li>@Html.DisplayFor(modelItem => item.Description)</li>
                            </ul>
                        </div>

                        <div>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ClassroomId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ClassroomId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ClassroomId })
                        </div>


                        @*@if (User.IsInRole("admin"))
                        {
                            <div>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ClassroomId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ClassroomId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ClassroomId })
                            </div>
                        }*@

                    </div>
                </div>
            }
        </div>
    </div>
</section>

