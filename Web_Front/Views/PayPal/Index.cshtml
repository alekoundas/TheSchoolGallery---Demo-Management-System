@model IEnumerable<PayPal.Api.Item>
@{
    ViewBag.Title = "AddToCart";
}

<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <br />
            <br />
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="wrap-login100">
                        <div class="paintingInfoD">
                            <span class="login100-form-title p-b-33">
                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                Cart
                            </span>
                            <hr />
                            <br />

                            @if (Model == null)
                            {
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12 align-items-stretch">
                                            <div class="dottedFrameDark text-center">
                                                <h2>
                                                    Fill Cart to Reach 50 <i class="fa fa-eur" aria-hidden="true"></i>  Goal!
                                                </h2>
                                                <hr />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-12 align-items-stretch">
                                                <div class="dottedFrameDark text-center">
                                                    <h5>
                                                        Painting: @item.name |  Price:  @item.price <i class="fa fa-eur" aria-hidden="true"></i> |  Tax: @item.tax | Quantity:  @item.quantity
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                </div>

                @*Create Something side Parallax*@
                <div class="col-md-4 mx-auto">
                    <div class="sideImage" id="p_container">
                        <img style="right:20px; bottom:200px; border:4px solid #bababa; width:80%; box-shadow:1px 1px 20px 10px rgba(0,0,0,0.1);" class="stackImages P_child" id="slidetwo" src="~/images/white-paper-texture.jpg">
                        <img style="left:-300px; bottom:20px; width:900px" class="stackImages p_child" id="slideone" src="~/images/parallax/gallery_boi.png">
                        <img style="right:0px; bottom:40px; width:150px" class="stackImages P_child" id="slidethree" src="~/images/parallax/people16.png">

                    </div>
                </div>


            </div>
        </div>


        <div class="col-md-12 mx-auto">
            <section id="socialLoginForm" class="text-center">
                <br />
                <hr />
                <div id="dark_back_C">
                    <a href="@Url.Action("PayPalPayment", "PayPal")"><img id="iconBtn" src="~/images/UIcons/cart.png" /> Purchase </a>
                    <a href="@Url.Action("ClearCart", "PayPal")"><img id="iconBtn" src="~/images/UIcons/cart.png" /> Clear Cart </a>
                </div>
            </section>
        </div>

    </div>
</div>




