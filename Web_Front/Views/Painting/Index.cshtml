@model IEnumerable<Web_DomainClasses.Entities.School.Painting>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 pt-20 pb-20">
    <h1>Paintings</h1>
</div>
<div class="feature-area pt-10 pb-10  relative">
    <div class="container">
        <div class="row">
            <h2 class="col-md-6">

                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                @Html.ActionLink("Create New", "Create")

                @*@if (User.IsInRole("admin"))
                    {
                        <i class="fa fa-plus-circle" aria-hidden="true"></i>
                        @Html.ActionLink("Create New", "Create")
                    }*@

            </h2>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <p>
                        Find by Name: @Html.TextBox("SearchString")
                        <input class="btn btn-large" type="submit" value="Search" />
                    </p>
                }
            </div>
        </div>
    </div>

</div>
<hr />

<section class="feature-area pt-100 pb-100  relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-6 align-items-stretch">
                    <div class="paintingcontainer">
                        <div class="wrap-Painting">
                            <div class="painting">
                                <img src="~/images/paintings/@Html.DisplayFor(modelItem => item.ImageUrl)" />
                            </div>
                            <br />
                            <div class="paintingdesc">
                                <h4>@Html.DisplayFor(modelItem => item.PaintingTitle) </h4>
                                <hr />
                                <h4>by @Html.DisplayFor(modelItem => item.Student.FirstName) @Html.DisplayFor(modelItem => item.Student.LastName) </h4>
                                <p class="text-right">
                                    Cost: @Html.DisplayFor(modelItem => item.Price)
                                </p>
                                <a href="#"><img class="float-right" src="~/images/cart.png" /></a>
                                
                            </div>
                        </div>
                        <div>
                            <a style="color:#f3efe9" href="@Url.Action("Edit", "Painting", new { id = item.PaintingId })"><img src="~/images/edit.png" /> edit </a>
                            <a style="color:#f3efe9" href="@Url.Action("Details", "Painting", new { id = item.PaintingId })"><img src="~/images/details.png" /> details </a>
                            <a style="color:#f3efe9" href="@Url.Action("Delete", "Painting", new { id = item.PaintingId })"><img src="~/images/delete.png" /> delete </a>
                        </div>

                        @*@if (User.IsInRole("admin"))
                            {
                                <div>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.PaintingId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.PaintingId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.PaintingId })
                                </div>
                            }*@

                    </div>
                </div>
            }
        </div>
    </div>
</section>