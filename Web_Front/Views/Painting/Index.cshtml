<section class="feature-area pt-100 pb-100  relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-6 align-items-stretch">
                    <div class="single-feature">
                        <div class="painting">
                            <img src="~/images/@Html.DisplayFor(modelItem => item.ImageUrl)" />
                        </div>
                        <div class="desc">
                            <h2 class="text-uppercase">@Html.DisplayFor(modelItem => item.PaintingTitle) <br> By Yio Cho</h2>
                            <p>
                                @Html.DisplayFor(modelItem => item.Price)
                            </p>
                        </div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PaintingId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PaintingId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PaintingId })
                    </div>
                </div>
            }
        </div>
    </div>
</section>