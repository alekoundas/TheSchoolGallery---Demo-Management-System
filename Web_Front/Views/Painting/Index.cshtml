@model IEnumerable<Web_DomainClasses.Entities.School.Painting>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Admin"))
{
    <!-- ADMIN VIEW ----------------------------------------------------- -->
    @Html.Partial("_Index_Admin")
}
else
{
    <!-- GUEST VIEW ----------------------------------------------------- -->
    @Html.Partial("_Index_Guest")
}


@section Scripts {

    <script>
        $(document).ready(function () {
            if('@ViewBag.NameSortParm'!='')
                $("#profileImage").attr("src", "../Images/down.png");
            else
                $("#profileImage").attr("src", "../Images/up.png");
        });
    </script>

}

