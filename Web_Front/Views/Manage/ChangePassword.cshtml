@model Web_Front.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}


<div class="limiter">
    <div class="container-login100">
        <div class="container-fluid">
            <h3 class="text-center" style="color:#f3efe9;">Change Password</h3>
            <hr />
            <br />
            <div class="row">
                <!--  ---------------------------------------->
                <div class="col-md-12 mx-auto">
                    <div class="wrap-Avatar">
                        <div class="wrap-login100">
                            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "wrap-Avatar", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4 style="color:#5c5c5c;">Change Password Form</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="wrap-avabox">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "input100" })
                                </div>
                                <p style="color:#909090">Old Password</p>
                                <div class="wrap-avabox">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "input100" })
                                </div>
                                <p style="color:#909090">New Password</p>
                                <div class="wrap-avabox">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100" })
                                </div>
                                <p style="color:#909090">Confirm password</p>
                                <div class="container-login100-form-btn m-t-20">
                                    <input type="submit" value="Change password" class="login100-form-btn" />
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}