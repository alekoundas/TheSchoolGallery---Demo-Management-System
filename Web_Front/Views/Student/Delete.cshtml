@model Web_DomainClasses.Entities.School.Student

@{
    ViewBag.Title = "Delete";
}


<div class="limiter">
    <div class="container-login100">

        <div class="container">
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="wrap-login100">
                        <div class="paintingInfoD">
                            <span class="login100-form-title p-b-33">
                                Delete Student
                            </span>
                            <hr />
                            <h4 class="text-center">Are you sure you want to delete this Student?</h4>
                            <br />
                            <div class="paintingcontainer">
                                <div class="container-fluid mx-0 text-center">
                                    <div class="row">
                                        <div class="col">
                                            <!-- Section - Avatar ------------------------------------------>
                                            <div style="width:180px; height:180px; border:4px dotted #e5e2dd" class="wrap-studentAvatar Mama_Avatar">
                                                @*AVATAR HERE ------------------------------------------------------>>*@
                                                <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(model => model.Avatar.Background.ImageUrl)" />
                                                <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(model => model.Avatar.Body.ImageUrl)" />
                                                <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(model => model.Avatar.Clothing.ImageUrl)" />
                                                <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(model => model.Avatar.Hair.ImageUrl)" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <br />
                                            <div style="margin-top:20px" class="text-center">
                                                <h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
                                                <hr />
                                                <h3 id="emojiis" class="text-center">
                                                    (◞‸◟；)
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.StudentId)
                            <div class="form-actions no-color">
                                <div class="container-login100-form-btn m-t-20">
                                    <input class="login100-form-btn" type="submit" value="Delete" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-3 mx-auto">
                    <div class="sideImage" id="p_container">
                        <img style="bottom:0px" class="stackImages p_child" id="slideone" src="~/images/parallax/Portrait_figure.png">
                        <img style="bottom:0px" class="stackImages P_child" id="slidetwo" src="~/images/parallax/Portrait_boi2.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Section - Links ---------------------------------------->
        <div style="height:180px;" class="container col-6">
            <hr />
            <br />
            <div class="row">
                <div class="btn_contain1 col">
                    <div class="btn_child_norm1">
                        <a href="@Url.Action("Index", "Student")"><img src="~/images/UIcons/students_off.png" /></a>
                    </div>
                    <div class="btn_child_live1">
                        <a style="color:#f3efe9" href="@Url.Action("Index", "Student")"><img src="~/images/UIcons/students.png" /> students </a>
                    </div>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="btn_contain2 col">
                        <div class="btn_child_norm2">
                            <a href="@Url.Action("Edit", "Student", new { id = Model.StudentId })"><img src="~/images/UIcons/edit_off.png" /></a>
                        </div>
                        <div class="btn_child_live2">
                            <a style="color:#f3efe9" href="@Url.Action("Edit", "Student", new { id = Model.StudentId })"><img src="~/images/UIcons/edit.png" /> edit </a>
                        </div>
                    </div>

                    <div class="btn_contain3 col">
                        <div class="btn_child_norm3">
                            <a href="@Url.Action("Details", "Student", new { id = Model.StudentId })"><img src="~/images/UIcons/details_off.png" /></a>
                        </div>
                        <div class="btn_child_live3">
                            <a style="color:#f3efe9" href="@Url.Action("Details", "Student", new { id = Model.StudentId })"><img src="~/images/UIcons/details.png" /> details </a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
