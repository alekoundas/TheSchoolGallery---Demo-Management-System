@model Web_DomainClasses.Entities.School.Student

@{
    ViewBag.Title = "Delete";
}


<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="wrap-login100">
                        <div class="paintingInfoD">
                            <span class="login100-form-title p-b-33">
                                Delete Student
                            </span>
                            <hr />
                            <h4 class="text-center">Are you sure you want to delete this Student?</h4>
                            <br />

                            <div class="paintingcontainer text-center">

                                @*AVATAR HERE*@
                                <img style="width:250px" src="~/images/Avatar/back_03.png" />
                                <br />
                                <div style="margin-top:20px" class="text-center">
                                    <h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
                                    <hr />
                                    <h3 id="emojiis" class="text-center">
                                        (◞‸◟；)
                                    </h3>
                                </div>
                            </div>
                        </div>


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <div class="container-login100-form-btn m-t-20">
                                    <input class="login100-form-btn" type="submit" value="Delete" />
                                </div>
                            </div>
                        }

                    </div>
                </div>

                <div class="col-md-3 mx-auto">
                    <div class="sideImage" id="p_container">
                        <img class="stackImages" src="~/images/parallax/Portrait_base_01.png">
                        <img style="bottom:0px" class="stackImages p_child" id="slideone" src="~/images/parallax/Portrait_body_01.png">
                        <img style="bottom:0px" class="stackImages P_child" id="slidetwo" src="~/images/parallax/Portrait_hand_01.png">
                    </div>
                </div>

            </div>
        </div>

        <section id="socialLoginForm">
            <h3 class="text-center" style="color:white">Return</h3>
            <hr />
            <div class="container-login100-form-btn m-t-20">
                <a href="@Url.Action("Index", "Student")"><img id="iconBtn" src="~/images/UIcons/students_off.png" /> back to student </a>
            </div>
        </section>



    </div>
</div>
