@model Web_DomainClasses.Entities.School.Student

@{
    ViewBag.Title = "Edit";
}

<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <br />
            <h2 class="text-center" style="color:#f3efe9;"> edit Student</h2>
            <hr />
            <br />
            <div class="row">

                <!-- Section - Avatar ------------------------------------------>
                <div class="col">
                    <div style="width:180px; height:180px; border:4px dotted #e5e2dd" class="wrap-studentAvatar Mama_Avatar">
                        @*AVATAR HERE ------------------------------------------------------>>*@
                        <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(model => model.Avatar.Background.ImageUrl)" />
                        <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(model => model.Avatar.Body.ImageUrl)" />
                        <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(model => model.Avatar.Clothing.ImageUrl)" />
                        <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(model => model.Avatar.Hair.ImageUrl)" />
                    </div>
                </div>

                <!-- Section - Student Details ---------------------------------------->
                <div class="col-md-12 mx-auto">
                    <div class="wrap-Avatar" style="color:#f3efe9">
                        <div class="wrap-login100">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.StudentId)
                                @Html.HiddenFor(model => model.ClassroomFK)
                                @Html.HiddenFor(model => model.AvatarFK)


                                <div class="wrap-avabox text-center">
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "input100" } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                                <p style="color:#909090">First Name</p>

                                <div class="wrap-avabox text-center">
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "input100" } })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                                <p style="color:#909090">Last Name</p>

                                <div class="wrap-avabox text-center">
                                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "input100" } })
                                    @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                                </div>
                                <p style="color:#909090">Age</p>

                                // SAVE BUTTON ----------------------------------------------------
                                <div class="container-login100-form-btn m-t-20">
                                    <input class="login100-form-btn" type="submit" value="Save" />
                                </div>

                            }
                        </div>
                    </div>
                    <!-- Section - Links ---------------------------------------->
                    <div style="height:180px;" class="container col-6">
                        <hr />
                        <br />
                        <div class="row">
                            <div class="btn_contain1 col">
                                <div class="btn_child_norm1">
                                    <a href="@Url.Action("Index", "Student")"><img src="~/images/UIcons/students_off.png" /></a>
                                </div>
                                <div class="btn_child_live1">
                                    <a style="color:#f3efe9" href="@Url.Action("Index", "Student")"><img src="~/images/UIcons/students.png" /> students </a>
                                </div>
                            </div>

                            <div class="btn_contain2 col">
                                <div class="btn_child_norm2">
                                    <a href="@Url.Action("Index", "Student")"><img src="~/images/UIcons/students_off.png" /></a>
                                </div>
                                <div class="btn_child_live2">
                                    <a style="color:#f3efe9" href="@Url.Action("Index", "Student")"><img src="~/images/UIcons/students.png" /> go to students </a>
                                </div>
                            </div>

                            <div class="btn_contain3 col">
                                <div class="btn_child_norm3">
                                    <a href="@Url.Action("Details", "Classroom", new { id = Model.StudentId })"><img src="~/images/UIcons/schools_off.png" /></a>
                                </div>
                                <div class="btn_child_live3">
                                    <a style="color:#f3efe9" href="@Url.Action("Details", "Classroom", new { id = Model.StudentId })"><img src="~/images/UIcons/schoolspng.png" /> go to class </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    @Scripts.Render("~/bundles/jqueryval")

    <script>
    
        
    </script>


}