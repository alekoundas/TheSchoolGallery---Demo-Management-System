@model IEnumerable<Web_DomainClasses.Entities.School.Student>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 pt-20 pb-20">
    <h1>
        @*<img style="height:100px; width:100%" src="~/images/banner.jpg" alt="Alternate Text" />*@
        Students
    </h1>
</div>
<div class="feature-area pt-10 pb-10  relative">
    <div class="container">
        <div class="row">
            <h2 class="col-md-6">

                @if (User.IsInRole("admin"))
                {
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    @Html.ActionLink("Create New", "Create")
                }

            </h2>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <p>
                        Find by Name: @Html.TextBox("SearchString")
                        <input class="btn btn-large" type="submit" value="Search" />
                    </p>
                }
            </div>
        </div>
    </div>
</div>
<hr />

<section class="feature-area pt-100 pb-100  relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-6 align-items-stretch">
                    <div class="paintingcontainer">
                        <div class="dottedFrameDark isThisLink">
                            <!-- Student - Link ------------------------------------------>
                            <a href="@Url.Action("Details", "Student", new { id = item.StudentId })">
                                <div class="d-flex justify-content-center align-items-center">
                                    <!-- Section - Avatar ------------------------------------------>
                                    <div style="width:200px; height:200px;" class="wrap-studentAvatar Mama_Avatar">
                                        <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Background.ImageUrl)" />
                                        <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Body.ImageUrl)" />
                                        <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Clothing.ImageUrl)" />
                                        <img class="Boi_Avatar" style="width:100%; height:100%;" src="~/images/Avatar/@Html.DisplayFor(modelItem => item.Avatar.Hair.ImageUrl)" />
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div class="paintingdesc">
                                    <h4>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h4>
                                    <hr />
                                    <p class="text-right">
                                        @Html.DisplayNameFor(model => model.Age) : @Html.DisplayFor(modelItem => item.Age)
                                    </p>
                                </div>
                            </a>
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Section - Links ---------------------------------------->
                            <div style="height:180px;" class="container col-12">
                                <hr />
                                <br />
                                <div class="row">
                                    <div class="btn_contain1 col">
                                        <div class="btn_child_norm1">
                                            <a href="@Url.Action("Edit", "Student", new { id = item.StudentId })"><img src="~/images/UIcons/edit_off.png" /></a>
                                        </div>
                                        <div class="btn_child_live1">
                                            <a style="color:#f3efe9" href="@Url.Action("Edit", "Student", new { id = item.StudentId })"><img src="~/images/UIcons/edit.png" /> edit </a>
                                        </div>
                                    </div>

                                    <div class="btn_contain2 col">
                                        <div class="btn_child_norm2">
                                            <a href="@Url.Action("Details", "Student", new { id = item.StudentId })"><img src="~/images/UIcons/details_off.png" /></a>
                                        </div>
                                        <div class="btn_child_live2">
                                            <a style="color:#f3efe9" href="@Url.Action("Details", "Student", new { id = item.StudentId })"><img src="~/images/UIcons/details.png" /> details </a>
                                        </div>
                                    </div>

                                    <div class="btn_contain3 col">
                                        <div class="btn_child_norm3">
                                            <a href="@Url.Action("Delete", "Student", new { id = item.StudentId })"><img src="~/images/UIcons/delete_off.png" /></a>
                                        </div>
                                        <div class="btn_child_live3">
                                            <a style="color:#f3efe9" href="@Url.Action("Delete", "Student", new { id = item.StudentId })"><img src="~/images/UIcons/delete.png" /> delete </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            }
        </div>
    </div>
</section>




