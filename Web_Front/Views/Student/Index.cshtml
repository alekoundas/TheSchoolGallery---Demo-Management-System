@model IEnumerable<Web_DomainClasses.Entities.School.Student>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 pt-20 pb-20">
    <h1>
        @*<img style="height:100px; width:100%" src="~/images/banner.jpg" alt="Alternate Text" />*@
        Students
    </h1>
</div>
<div class="feature-area pt-10 pb-10  relative">
    <div class="container">
        <div class="row">
            <h2 class="col-md-6">

                @*@if (User.IsInRole("admin"))
                    {
                        <i class="fa fa-plus-circle" aria-hidden="true"></i>
                        @Html.ActionLink("Create New", "Create")
                    }*@

                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                @Html.ActionLink("Create New", "Create")

            </h2>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <p>
                        Find by Name: @Html.TextBox("SearchString")
                        <input class="btn btn-large" type="submit" value="Search" />
                    </p>
                }
            </div>
        </div>
    </div>
</div>
<hr />

<section class="feature-area pt-100 pb-100  relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-6 align-items-stretch">
                    <div class="paintingcontainer">
                        <div class="dottedFrame">
                            <div class="painting text-center">
                                @*AVATAR HERE*@
                                <img style="width:200px; border:none; box-shadow:none" src="~/images/Avatar/back_01.png" />
                            </div>
                            <br />
                            <div class="paintingdesc">
                                <h4>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h4>
                                <hr />
                                <p class="text-right">
                                    @Html.DisplayNameFor(model => model.Age) : @Html.DisplayFor(modelItem => item.Age)
                                </p>
                            </div>
                        </div>
                        <div>
                            <a style="color:#f3efe9" href="@Url.Action("Edit", "Student", new { id = item.StudentId })"><img id="iconBtn" src="~/images/UIcons/edit_off.png" /> edit </a>
                            <a style="color:#f3efe9" href="@Url.Action("Details", "Student", new { id = item.StudentId })"><img id="iconBtn" src="~/images/UIcons/details_off.png" /> details </a>
                            <a style="color:#f3efe9" href="@Url.Action("Delete", "Student", new { id = item.StudentId })"><img id="iconBtn" src="~/images/UIcons/delete_off.png" /> delete </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>




