@model IEnumerable<Web_DomainClasses.Entities.School.Student>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 text-center pt-20 pb-20">
    <h1>
        <img style="height:100px; width:100%" src="~/images/banner.jpg" alt="Alternate Text" />

        Students
    </h1>
</div>
<hr />
<div class="feature-area pt-10 pb-10  relative">
    <div class="container">
        <div class="row">
            <h2 class="col-md-6">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                @Html.ActionLink("Create New", "Create")
            </h2>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <p>
                        Find by Name: @Html.TextBox("SearchString")
                        <input class="btn btn-large" type="submit" value="Search" />
                    </p>
                }
            </div>
        </div>
    </div>

</div>
<hr />

<div>
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-center">

            @foreach (var item in Model)
            {
                <div class="banner-left col-lg-6">
                    <img class="d-flex mx-auto img-fluid" src="~/images/banner.jpg" alt="">
                </div>
                <div class="col-lg-6">
                    <div class="story-content">
                        <h6 class="text-uppercase">From the School</h6>
                        <h3>
                            @Html.DisplayNameFor(model => model.FirstName): <span class="sp-1">@Html.DisplayFor(modelItem => item.FirstName)</span><br>
                            @Html.DisplayNameFor(model => model.LastName): <span class="sp-2">@Html.DisplayFor(modelItem => item.LastName)</span>
                        </h3>

                        <h4>
                            @Html.DisplayNameFor(model => model.Age): <span class="sp-1">@Html.DisplayFor(modelItem => item.Age)</span><br>
                            <span class="sp-2">
                                @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.StudentId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })
                            </span>
                        </h4>
                    </div>
                </div>

            }

        </div>
    </div>
</div>








