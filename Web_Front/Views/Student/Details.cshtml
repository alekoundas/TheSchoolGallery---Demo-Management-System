@model Web_DomainClasses.Entities.School.Student

@{
    ViewBag.Title = "Details";
}

<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <br />
            <br />
            <div class="row">

                <!-- Section - Student Details ---------------------------------------->
                <div class="col-md-12 mx-auto text-center">

                    <div class="paintingcontainer">
                        <div class="studentdesc">
                            <h3>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
                            <hr style="border-bottom:2px dotted" />
                            <h4 style="color:white">@Html.DisplayNameFor(model => model.Age): @Html.DisplayFor(model => model.Age)</h4>
                        </div>
                    </div>
                </div>

                <!-- Section - Avatar ------------------------------------------>
                <div class="col-md-4 mx-auto">
                    <div class="wrap-studentAvatar">
                        <img src="~/images/Avatar/back_05.png" />
                    </div>
                </div>

                <!-- Section - Teacher/School --------------------------------------->
                <div class="col-md-12 mx-auto text-center">
                    <div lass="dottedFramenoH">
                        <h3>@Html.DisplayFor(model => model.Classroom.Teacher.FirstName) @Html.DisplayFor(model => model.Classroom.Teacher.LastName)</h3>
                        <hr />
                        @*LINK TO SCHOOL DETAIL PAGE*@
                        <a style="color:#f3efe9; font-size:24px;" href="@Url.Action("Details", "School", new { id = Model.StudentId })"> @Html.DisplayFor(model => model.Classroom.School.Name) </a>
                        <h3>@Html.DisplayFor(model => model.Classroom.School.City)</h3>
                    </div>
                </div>


                <!-- Section - PAINTINGS ---------------------------------------->

                <div class="container">
                    <div class="row">
                        @foreach (var item in Model.Paintings)
                        {
                            <div class="col-lg-4 col-sm-6 align-items-stretch">
                                <div class="paintingcontainer">
                                    <div style="height:500px; min-height:450px;" class="dottedFrame">
                                        <div class="painting">
                                            <img src="~/images/paintings/@Html.DisplayFor(modelItem => item.ImageUrl)" />
                                        </div>
                                        <br />
                                        <div class="paintingdesc">
                                            <div class="paintingInfo">
                                                <h4>@Html.DisplayFor(modelItem => item.PaintingTitle) </h4>
                                                <hr />
                                                <h5 class="text-right">
                                                    Suggested Donation:  <span style="font-size:24px; font-weight:800;" class="fa"> @Html.DisplayFor(modelItem => item.Price)</span><i class="fa fa-eur" aria-hidden="true"></i>
                                                </h5>
                                                <a href="#"><img class="float-right" src="~/images/UIcons/cart_off.png" /></a>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Section - Links ---------------------------------------->
                <div class="col-md-12 mx-auto text-center">
                    <div class="paintingcontainer">
                        <hr />
                        <br />
                        <div>
                            <a style="color:#f3efe9" href="@Url.Action("Index", "Painting")"><img id="iconBtn" src="~/images/UIcons/paintings_off.png" /> back to paintings </a>
                            @*<a style="color:#f3efe9" href="@Url.Action("Edit", "Student", new { id = Model.StudentId })"><img src="~/images/register.png" /> edit student </a>*@
                        </div>
                    </div>
                </div>






            </div>
        </div>
    </div>
</div>












