@model Web_DomainClasses.Entities.School.School

@{
    ViewBag.Title = "Delete";
}

<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="wrap-login100">
                        <span class="login100-form-title p-b-33">
                            Delete School
                        </span>
                        <hr />
                        <h4 class="text-center">Are you sure you want to delete this School?</h4>
                        <br />
                        <div class="paintingcontainer">
                            <div style="color:#4a4a4a; margin-top:20px" class="studentdesc  text-center">
                                <h2>@Html.DisplayFor(model => model.Name)</h2>
                                <h5>@Html.DisplayFor(model => model.City)</h5>
                                <hr />
                                <h3 id="emojiis" class="text-center">
                                    ˓(ᑊᘩᑊ⁎)
                                </h3>
                            </div>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <div class="container-login100-form-btn m-t-20">
                                    <input class="login100-form-btn" type="submit" value="Delete" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-3 mx-auto">
                    <div class="sideImage" id="p_container">
                        <img class="stackImages" src="~/images/parallax/Portrait_base_del.png">
                        <img style="bottom:0px" class="stackImages_corr P_child" id="slidetwo" src="~/images/parallax/Portrait_hand_02.png">
                        <img style="bottom:0px" class="stackImages p_child" id="slideone" src="~/images/parallax/Portrait_body_02.png">
                    </div>
                </div>
            </div>
        </div>
        <section>
            <hr />
            <div class="container-login100-form-btn m-t-20">
                <a style="color:#f3efe9" href="@Url.Action("Index", "School")"><img src="~/images/menu.png" /> back to school </a>
            </div>
        </section>
    </div>
</div>

