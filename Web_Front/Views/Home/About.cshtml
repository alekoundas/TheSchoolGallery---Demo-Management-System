@{
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <title>Banner</title>
    <!-- STYLES ---------------------------------------------------------- -->
    <link rel="stylesheet" href="~/css/linearicons.css">
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/pfold.css" />
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/handwrite.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.2/TweenMax.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.2/utils/Draggable.min.js"></script>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <div id="load"></div>
    <div class="se-pre-con"></div>



    <a href="@Url.Action("Index", "Home")">
        <div class="wrapper">
            <div class="text" data-index="1">(Welcome to...)</div>
            <div class="text hidden" data-index="2">(The School Gallery)</div>
            <div class="text hidden" data-index="3">(Children Create Art)</div>
            <div class="text hidden" data-index="4">(Buy any piece of Art)</div>
            <div class="text hidden" data-index="5">(Support their Schools)</div>
        </div>

        <div class="cd-background-wrapper">
            <div class="mousetrack"></div>
            <figure class="cd-floating-background">
                <img id="para01" src="~/images/parallax/clouds_back.png">
                <img id="para02" src="~/images/parallax/clouds_middle.png">
                <img id="para03" src="~/images/parallax/clouds_front.png">
                <img id="para04" src="~/images/parallax/birds.png">
                <img id="para05" src="~/images/parallax/mountains_back.png">
                <img id="para06" src="~/images/parallax/mountains_middle.png">
                <img id="para07" src="~/images/parallax/mountains_front.png">
                <img id="para08" src="~/images/parallax/gallery_frame.png">
                <img id="para09" src="~/images/parallax/smoke.png">
                <img id="para10" src="~/images/parallax/gallery_paint.png">
                <img id="para11" src="~/images/parallax/gallery_boi.png">
                <img id="para12" src="~/images/parallax/front.png">
            </figure>
        </div>
    </a>

    <!-- JAVASCRIPTS ----------------------------------------------------- -->
    <script src="~/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/js/vendor/bootstrap.min.js"></script>
    <script src="~/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/parallax.js"></script>
    <script src="~/js/typewriter.js"></script>
    <script src="~/js/modernizr.custom.79639.js"></script>
    <script src="~/js/jquery.pfold.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/textswap.js"></script>

    <script>
        document.onreadystatechange = function () {
            var state = document.readyState
            if (state == 'interactive') {
                document.getElementById('contents').style.visibility = "hidden";
            } else if (state == 'complete') {
                setTimeout(function () {
                    document.getElementById('interactive');
                    document.getElementById('load').style.visibility = "hidden";
                    document.getElementById('contents').style.visibility = "visible";
                }, 2000);
            }
        }
    </script>

</body>
</html>
