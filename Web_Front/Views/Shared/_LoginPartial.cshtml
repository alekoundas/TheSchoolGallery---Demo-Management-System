@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <div class="container col-5 float-left">
            <div class="row">

                <div class="btn_contain1 col">
                    <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Profile", "Profile")"><img src="~/images/UIcons/loged.png" /></a>
                    <span style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;">@Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</span>
                </div>

                <div class="btn_contain2 col">
                    <div class="btn_child_norm2">
                        <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="javascript:document.getElementById('logoutForm').submit()"><img id="iconBtn" src="~/images/UIcons/logoff.png" /></a>
                    </div>
                    <div class="btn_child_live2">
                        <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="javascript:document.getElementById('logoutForm').submit()"><img id="iconBtn" src="~/images/UIcons/logoff_on.png" />log off</a>
                    </div>
                </div>

                <div class="btn_contain3 col">
                    <div class="btn_child_norm3">
                        <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Index", "PayPal")"><img src="~/images/UIcons/cart_off.png" /></a>
                    </div>
                    <div class="btn_child_live3">
                        <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Index", "PayPal")"><img src="~/images/UIcons/cart.png" />cart</a>
                    </div>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <!-- ADMIN ONLY VIEW ----------------------------------------------------- -->
                    <div class="btn_contain4 col">
                        <div class="btn_child_norm4">
                            <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Index", "Roles")"><img src="~/images/UIcons/gears_off.png" /></a>
                        </div>
                        <div class="btn_child_live4">
                            <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Index", "Roles")"><img src="~/images/UIcons/gears.png" />settings</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    }
}
else
{
    <div class="container col-2 float-left">
        <div class="row">
            <div class="btn_contain1 col">
                <div class="btn_child_norm1">
                    <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Login", "Account")"><img src="~/images/UIcons/login.png" /></a>
                </div>
                <div class="btn_child_live1">
                    <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Login", "Account")"><img src="~/images/UIcons/login_on.png" />log in</a>
                </div>
            </div>
            <div class="btn_contain2 col">
                <div class="btn_child_norm2">
                    <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Register", "Account")"><img src="~/images/UIcons/register.png" /></a>
                </div>
                <div class="btn_child_live2">
                    <a style="color:#5c5c5c; text-shadow:1px 1px #f3efe9;" href="@Url.Action("Register", "Account")"><img src="~/images/UIcons/register_on.png" />register</a>
                </div>
            </div>
        </div>
    </div>



}
