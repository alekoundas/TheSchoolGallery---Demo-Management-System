
@{
    ViewBag.Title = "SkopiaGame";
    @Styles.Render("~/Skopia/TemplateData/style.css")
    @Scripts.Render("~/Skopia/TemplateData/UnityProgress.js");
    @Scripts.Render("~/Skopia/Build/UnityLoader.js");

}

<h2>SkopiaGame</h2>

<script>
    var gameInstance = UnityLoader.instantiate("gameContainer", "../Build/Skopia.json", { onProgress: UnityProgress });
</script>

<div class="webgl-content">
    <div id="gameContainer" style="width: 960px; height: 600px"></div>
    <div class="footer">
        <div class="webgl-logo"></div>
        <div class="fullscreen" onclick="gameInstance.SetFullscreen(1)"></div>
        <div class="title">Skopia 2019</div>
    </div>
</div>


