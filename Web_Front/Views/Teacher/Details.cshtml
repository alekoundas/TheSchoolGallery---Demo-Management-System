@model Web_DomainClasses.Entities.School.Teacher

@{
    ViewBag.Title = "Details";
}

<div class="limiter">
    <div class="container-login100">
        <div class="container">
            <br />
            <h2 class="text-center" style="color:#f3efe9;"> Teacher in Detail</h2>
            <hr />
            <br />
            <div class="row">
                <!-- Section - School Details ---------------------------------------->
                <div class="col-md-12 mx-auto text-center">
                    <div class="paintingcontainer">
                        <div class="Schooldesc">
                            <h3>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
                            <hr />

                            <h4>
                                @*@Html.DisplayNameFor(model => model.Classroom): @Html.DisplayFor(model => model.Classroom)*@
                            </h4>
                        </div>




                        <!-- Section - Links ---------------------------------------->
                        <div style="height:180px;" class="container col-6">
                            <hr />
                            <br />
                            <div class="row">
                                <div class="btn_contain1 col">
                                    <div class="btn_child_norm1">
                                        <a href="@Url.Action("Index", "Teacher")"><img src="~/images/UIcons/students_off.png" /></a>
                                    </div>
                                    <div class="btn_child_live1">
                                        <a style="color:#f3efe9" href="@Url.Action("Index", "Teacher")"><img src="~/images/UIcons/students.png" /> teachers </a>
                                    </div>
                                </div>

                                <div class="btn_contain2 col">
                                    <div class="btn_child_norm2">
                                        <a href="@Url.Action("Details", "Classroom", new { id = Model.TeacherId })"><img src="~/images/UIcons/schools_off.png" /></a>
                                    </div>
                                    <div class="btn_child_live2">
                                        <a style="color:#f3efe9" href="@Url.Action("Details", "Classroom", new { id = Model.TeacherId })"><img src="~/images/UIcons/schoolspng.png" /> go to class </a>
                                    </div>
                                </div>

                                <div class="btn_contain3 col">
                                    <div class="btn_child_norm3">
                                        <a href="@Url.Action("Edit", "Teacher", new { id = Model.TeacherId })"><img src="~/images/UIcons/edit_off.png" /></a>
                                    </div>
                                    <div class="btn_child_live3">
                                        <a style="color:#f3efe9" href="@Url.Action("Edit", "Teacher", new { id = Model.TeacherId })"><img src="~/images/UIcons/edit.png" /> edit teacher </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

